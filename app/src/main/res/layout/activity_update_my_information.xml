<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.UpdateMyInformation"
    android:background="@color/c3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/userDisplayNameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/update_my_information"
            android:fontFamily="sans-serif-medium"
            android:hint="Kullanıcı Adı"
            android:padding="7dp"
            android:textColor="@color/c8"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/userMailAddressNameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:textSize="24sp"
            android:background="@drawable/update_my_information"
            android:padding="7dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:hint="Mail Adresi"
            android:focusable="false"
            android:inputType="textEmailAddress"
            android:textColor="@color/c8"
            />

        <EditText
            android:id="@+id/userNameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:textSize="24sp"
            android:background="@drawable/update_my_information"
            android:padding="7dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:hint="Ad"
            android:textColor="@color/c8"
            />

        <EditText
            android:id="@+id/userSurnameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/update_my_information"
            android:fontFamily="sans-serif-medium"
            android:hint="Soyad"
            android:padding="7dp"
            android:textColor="@color/c8"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/userPhoneEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/update_my_information"
            android:fontFamily="sans-serif-medium"
            android:hint="Telefon No"
            android:inputType="phone"
            android:maxLength="11"
            android:padding="7dp"
            android:textColor="@color/c8"
            android:textSize="24sp" />

        <Button
            android:id="@+id/updateButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bilgilerimi Güncelle"
            android:textSize="26sp"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            app:cornerRadius = "7dp"
            android:backgroundTint="@color/c8"
            android:textColor="@color/c2"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>