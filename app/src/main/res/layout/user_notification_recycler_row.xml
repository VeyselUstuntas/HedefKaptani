<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/c2"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:layout_margin="20dp"
        android:backgroundTint="@color/c3"
        android:outlineSpotShadowColor="@color/c1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            >
            <TextView
                android:id="@+id/notificationEventTimeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="bildirim Zamanı"
                android:fontFamily="sans-serif-medium"
                android:textSize="12sp"
                android:alpha="0.8"
                android:layout_gravity="end"/>

            <TextView
                android:id="@+id/notificationTitleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="bildirim basşlığı"
                android:fontFamily="sans-serif-medium"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/c8"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/notificationBodyTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="bildirim İçeriği"
                android:fontFamily="sans-serif-medium"
                android:paddingStart="3dp"
                android:paddingEnd="3dp"
                android:textSize="18sp"
                app:autoSizeMaxTextSize="18sp"
                app:autoSizeMinTextSize="15sp"
                app:autoSizeStepGranularity="1sp"
                app:autoSizeTextType="uniform"/>

            <ImageButton
                android:id="@+id/deleteNotification"
                android:onClick="deleteNotification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/notification_delete"
                android:backgroundTint="@color/c3"
                android:layout_gravity="end"/>


        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>