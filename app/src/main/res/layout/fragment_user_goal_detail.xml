<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.fragment.UserGoalDetail"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/c4"
        android:padding="10dp"
        android:gravity="center"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/tagetStateTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="sans-serif-medium"
            android:padding="10dp"
            android:text="Hedefiniz Üzerinden 30 Gün Geçti"
            android:maxLines="1"
            android:textColor="@color/c1"
            android:textSize="23sp"
            android:textStyle="bold"
            app:autoSizeMaxTextSize="23sp"
            app:autoSizeMinTextSize="18sp"
            app:autoSizeStepGranularity="1sp"
            app:autoSizeTextType="uniform"/>

        <Spinner
            android:id="@+id/targetCategorySpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/goal_alert_dialog_edit_text_background"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:entries="@array/category"
            />

        <EditText
            android:id="@+id/targetNameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/goal_alert_dialog_edit_text_background"
            android:padding="8dp"
            android:textSize="24sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/c12"
            android:layout_margin="5dp"
            android:hint="Hedef Adı"
            android:maxLines="2"
            />

        <EditText
            android:id="@+id/targetDateEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/goal_alert_dialog_edit_text_background"
            android:padding="8dp"
            android:textSize="24sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/c12"
            android:layout_margin="5dp"
            android:focusableInTouchMode="false"
            android:hint="Tarih" />

        <EditText
            android:id="@+id/targetTimeEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/goal_alert_dialog_edit_text_background"
            android:padding="8dp"
            android:textSize="24sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/c12"
            android:layout_margin="5dp"
            android:focusableInTouchMode="false"
            android:hint="Saat"/>

        <Button
            android:id="@+id/updateTargetButton"
            android:onClick="updateTarget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hedefi Güncelle"
            android:fontFamily="sans-serif-medium"
            android:textSize="26sp"
            app:cornerRadius ="7dp"
            android:textColor="@color/c10"
            android:backgroundTint="@color/c12"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            />
        <Button
            android:id="@+id/deleteTargetButton"
            android:onClick="deleteTarget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hedefi Sil"
            android:fontFamily="sans-serif-medium"
            android:textSize="26sp"
            app:cornerRadius ="7dp"
            android:textColor="@color/c10"
            android:backgroundTint="@color/c12"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>